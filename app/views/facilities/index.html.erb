<h1>Facilities</h1>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, "Name" %>
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate_gteq, "Min Hourly Rate" %>
    <%= f.number_field :hourly_rate_gteq, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate_lteq, "Max Hourly Rate" %>
    <%= f.number_field :hourly_rate_lteq, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :capacity_gteq, "Min Capacity" %>
    <%= f.number_field :capacity_gteq, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :lottery_cont, "Reservation Type" %>
    <%= f.select :lottery_cont, [['All', ''], ['Lottery', true], ['Normal', false]], {}, class: "form-control" %>
  </div>

  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Hourly Rate</th>
      <th>Reservation Type</th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= link_to facility.name, facility_path(facility) %></td>
        <td><%= facility.location %></td>
        <td><%= facility.capacity %></td>
        <td><%= facility.hourly_rate %></td>
        <td><%= facility.lottery ? 'Lottery' : 'Normal' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @facilities %>
