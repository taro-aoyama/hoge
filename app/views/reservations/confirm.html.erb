<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">予約内容の確認</h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">施設</p>
      <p class="text-gray-900"><%= @facility.name %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">利用期間</p>
      <p class="text-gray-900"><%= @reservation.start_time.strftime('%Y/%m/%d %H:%M') %> 〜 <%= @reservation.end_time.strftime('%Y/%m/%d %H:%M') %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">利用目的</p>
      <p class="text-gray-900"><%= @reservation.purpose %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">合計料金</p>
      <p class="text-2xl font-bold">¥<%= @reservation.total_fee.to_i.to_s(:delimited) %></p>
    </div>
  </div>

  <%= form_with(model: @reservation, url: reservations_path, method: :post) do |form| %>
    <%= form.hidden_field :facility_id %>
    <%= form.hidden_field :start_time %>
    <%= form.hidden_field :end_time %>
    <%= form.hidden_field :purpose %>
    <%= form.hidden_field :total_fee %>

    <div class="flex items-center justify-between">
      <%= link_to '修正する', new_reservation_path, class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800' %>
      <%= form.submit '予約を確定する', class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>
</div>
