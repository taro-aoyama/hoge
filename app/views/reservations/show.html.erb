<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">予約詳細</h1>

  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= flash[:notice] %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">ステータス</p>
      <p class="text-gray-900 font-semibold <%= "text-yellow-500" if @reservation.pending? %> <%= "text-green-500" if @reservation.approved? %>">
        <%= @reservation.status_i18n %>
      </p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">施設</p>
      <p class="text-gray-900"><%= @reservation.facility.name %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">利用期間</p>
      <p class="text-gray-900"><%= @reservation.start_time.strftime('%Y/%m/%d %H:%M') %> 〜 <%= @reservation.end_time.strftime('%Y/%m/%d %H:%M') %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">利用目的</p>
      <p class="text-gray-900"><%= @reservation.purpose %></p>
    </div>
    <div class="mb-4">
      <p class="block text-gray-700 text-sm font-bold mb-2">合計料金</p>
      <p class="text-2xl font-bold">¥<%= @reservation.total_fee.to_i.to_s(:delimited) %></p>
    </div>
  </div>

  <%= link_to '予約一覧へ', reservations_path, class: 'inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800' %>
</div>
